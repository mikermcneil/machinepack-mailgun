{
  "name": "machinepack-mailgun",
  "version": "0.8.0-1",
  "description": "Machines for the Mailgun API.",
  "scripts": {
    "test": "npm run lint && npm run custom-tests",
    "custom-tests": "node ./node_modules/mocha/bin/mocha test/*.js -R spec -t 10000",
    "lint": "node ./node_modules/eslint/bin/eslint . --max-warnings=0 && echo 'âœ”  Your code looks good.'"
  },
  "keywords": [
    "Mailgun",
    "machines",
    "machinepack"
  ],
  "author": "Mike McNeil <mikermcneil>",
  "repository": {
    "type": "git",
    "url": "git@github.com:mikermcneil/machinepack-mailgun.git"
  },
  "license": "MIT",
  "dependencies": {
    "machine": "^15.0.0-4",
    "mailcomposer": "2.1.0",
    "mailgun-js": "0.7.15"
  },
  "devDependencies": {
    "eslint": "3.19.0",
    "mocha": "3.0.2"
  },
  "machinepack": {
    "friendlyName": "Mailgun",
    "machineDir": "lib/",
    "machines": [
      "send-plaintext-email",
      "send-html-email",
      "set-global-defaults"
    ],
    "testsUrl": "https://travis-ci.org/mikermcneil/machinepack-mailgun"
  }
}
